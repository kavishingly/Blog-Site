<%- include('partials/header')%>

<h1>Compose</h1>
<form action="/compose" method="POST">
    <label for="title">Title</label>
    <input type="text" class="form-control" name="postTitle" id="title" autocomplete="off">
    <label for="post">Post</label>
    <textarea type="text" class="form-control" name="postBody" id="post" autocomplete="off"></textarea>

    <button type="submit" class="btn btn-primary" style="margin-top: 10px;" >Publish</button>
</form>

<%- include('partials/footer')%>